<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content" android:layout_height="wrap_content">
<Button android:layout_height="wrap_content" android:id="@+id/BtnLogoutInLogout" android:layout_marginTop="40px" android:clickable="true" android:layout_width="70px" android:text="Logout"></Button>
<Button android:layout_height="wrap_content" android:layout_toRightOf="@+id/BtnLogoutInLogout" android:layout_marginTop="40px" android:id="@+id/BtnExitInLogout" android:clickable="true" android:layout_width="70px" android:text="Exit"></Button>
<Button android:layout_height="wrap_content" android:layout_toRightOf="@+id/BtnExitInLogout" android:layout_marginTop="40px" android:clickable="true" android:id="@+id/BtnCancelInLogout" android:layout_width="70px" android:text="Cancel"></Button>
</RelativeLayout>
