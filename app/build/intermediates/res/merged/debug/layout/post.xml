<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/post_bg" android:layout_width="fill_parent" android:layout_height="fill_parent">

<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button" android:id="@+id/ImgBtnPostInPost" android:layout_marginLeft="170sp" android:clickable="true" android:onClick="MyClickInPost" android:layout_alignParentBottom="true" android:layout_marginBottom="10sp"></ImageButton>
<EditText android:id="@+id/EditTextPostInPost" android:background="@drawable/transparent_bg" android:gravity="top|fill_horizontal" android:layout_width="280sp" android:layout_marginLeft="20sp" android:maxLines="5" android:layout_marginTop="77sp" android:lines="8" android:maxLength="250" android:layout_height="150sp"></EditText>
<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/ImgBtnBrowsePicInPost" android:background="@drawable/browse_pic_btn" android:clickable="true" android:onClick="MyClickInPost" android:layout_marginLeft="180sp" android:layout_marginTop="265sp"></ImageButton><ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ImgBtnTakePicInPost" android:background="@drawable/take_pic" android:clickable="true" android:onClick="MyClickInPost" android:layout_marginLeft="40sp" android:layout_marginTop="270sp"></ImageButton><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TextViewTakePicInPost" android:text="Take photo" android:textStyle="bold" android:textSize="18sp" android:textColor="@color/Brown" android:layout_marginLeft="30sp" android:layout_marginTop="330sp"></TextView><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TextViewWritePostInPost" android:text="Write Post:" android:textSize="18sp" android:textColor="@color/Brown" android:textStyle="bold" android:layout_marginLeft="20sp" android:layout_marginTop="50sp"></TextView>
<ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/ImgBtnCancelInPost" android:layout_marginLeft="20sp" android:background="@drawable/button" android:clickable="true" android:onClick="MyClickInPost" android:layout_alignParentBottom="true" android:layout_marginBottom="10sp"></ImageButton><TextView android:layout_width="wrap_content" android:layout_below="@+id/EditTextPostInPost" android:layout_height="wrap_content" android:text="Post with:" android:textSize="18sp" android:textColor="@color/Brown" android:textStyle="bold" android:id="@+id/TextViewPostWithInPost" android:layout_marginLeft="20sp" android:layout_marginTop="10sp"></TextView><TextView android:id="@+id/TextViewCancelInPost" android:textStyle="bold" android:textSize="18sp" android:textColor="@color/Brown" android:text="CANCEL" android:layout_width="100sp" android:gravity="center" android:layout_marginLeft="35sp" android:layout_alignParentBottom="true" android:layout_marginBottom="20sp" android:layout_height="wrap_content"></TextView><TextView android:layout_height="wrap_content" android:id="@+id/TextViewPostInPost" android:text="POST" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/Brown" android:layout_width="100sp" android:layout_marginLeft="185sp" android:gravity="center" android:layout_marginBottom="20sp" android:layout_alignParentBottom="true"></TextView>









</RelativeLayout>