<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<ScrollView android:layout_below="@+id/TxtView_bur_ner" android:id="@+id/ScrollView01" android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="wrap_content"><RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="320sp" android:layout_height="480sp">




<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20sp" android:textStyle="bold" android:id="@+id/TxtView_bur_ner" android:layout_marginTop="20sp" android:layout_marginLeft="20sp" android:text="User Name"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20sp" android:textStyle="bold" android:layout_below="@+id/EditText_bur_ner" android:id="@+id/TxtView_bur_pass" android:layout_marginLeft="20sp" android:text="Password:"></TextView><EditText android:layout_below="@+id/TxtView_bur_ner" android:id="@+id/EditText_bur_ner" android:layout_height="48sp" android:layout_marginLeft="20sp" android:layout_width="220sp" android:singleLine="true" android:maxLength="13"></EditText><EditText android:layout_below="@+id/TxtView_bur_pass" android:password="true" android:id="@+id/EditText_bur_pass" android:layout_height="48sp" android:layout_marginLeft="20sp" android:layout_width="220sp" android:singleLine="true" android:maxLength="13"></EditText><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:textSize="20sp" android:layout_below="@+id/EditText_bur_pass" android:id="@+id/TxtView_bur_repass" android:layout_marginLeft="20sp" android:text="Confirm Password:"></TextView><EditText android:id="@+id/EditText_bur_repass" android:layout_height="48sp" android:layout_below="@+id/TxtView_bur_repass" android:password="true" android:layout_marginLeft="20sp" android:layout_width="220sp" android:singleLine="true" android:maxLength="13"></EditText>




<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:textSize="20sp" android:layout_below="@+id/EditText_bur_repass" android:id="@+id/TxtView_bur_mail" android:layout_marginLeft="20sp" android:text="Email:"></TextView>
<EditText android:layout_below="@+id/TxtView_bur_mail" android:id="@+id/EditText_bur_mail" android:layout_height="48sp" android:layout_marginLeft="20sp" android:layout_width="220sp" android:maxLength="30" android:singleLine="true"></EditText>







<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/Spinner_country" android:id="@+id/TextView_bur_exp" android:text="Алдаа" android:textSize="14sp" android:textColor="@color/Burnt_umber" android:layout_marginLeft="20sp" android:visibility="gone">
</TextView>
<Button android:layout_height="wrap_content" android:id="@+id/Btn_bur_butsah" android:layout_width="120sp" android:layout_marginLeft="19sp" android:text="Back" android:layout_below="@+id/EditText_bur_mail"></Button><Button android:layout_height="wrap_content" android:layout_width="120sp" android:id="@+id/Btn_bur_burtgeh" android:layout_marginLeft="165sp" android:text="Register" android:layout_below="@+id/EditText_bur_mail"></Button>















</RelativeLayout></ScrollView>

</LinearLayout>
