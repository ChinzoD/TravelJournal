<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:background="#813d16" android:layout_width="fill_parent">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:textSize="18sp" android:text="Username:" android:id="@+id/TextViewUsernameInLComment" android:gravity="left" android:textColor="@color/Blue"></TextView>


<TextView android:layout_below="@+id/TextViewUsernameInLComment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextViewCommentInLComment" android:text="Comment" android:textColor="@color/White"></TextView><TextView android:layout_height="wrap_content" android:text="Date:" android:gravity="right" android:id="@+id/TextViewDateInLComment" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_marginTop="4sp" android:textColor="@color/White"></TextView>



</RelativeLayout>
