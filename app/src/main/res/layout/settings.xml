<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Measurement Unit" android:textSize="18sp" android:textStyle="bold" android:id="@+id/TextViewMUnitInSettings"></TextView><Spinner android:layout_height="wrap_content" 
android:prompt="@string/unit" android:layout_alignParentRight="true" android:layout_width="fill_parent" android:layout_below="@+id/TextViewMUnitInSettings" android:id="@+id/SpinnerMUnitInSettings">
</Spinner>
<TextView android:layout_height="wrap_content" android:textStyle="bold" android:layout_below="@+id/SpinnerMUnitInSettings" android:id="@+id/TextViewAutoGpsSenderInSettings" android:text="Auto GPS sender's minimum step distance" android:textSize="15sp" android:layout_width="fill_parent" android:gravity="center_horizontal"></TextView>

<Spinner android:layout_below="@+id/TextViewAutoGpsSenderInSettings" 
android:layout_height="wrap_content" 
android:id="@+id/SpinnerStepDistanceInSettings" 
android:layout_width="fill_parent"></Spinner>
<Button android:layout_height="wrap_content" android:layout_below="@+id/SpinnerStepDistanceInSettings" android:text="Back" android:layout_width="100sp" android:id="@+id/ButtonBackInSettings" android:clickable="true"></Button>
</RelativeLayout>
